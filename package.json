{
  "name": "roadrun-website",
  "version": "2.1.0",
  "main": "server.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/1alex2lee/roadrunner-website.git"
  },
  "scripts": {
    "start": "node server.js",
    "build": "npm run css",
    "css-compile": "node-sass --include-path node_modules --output-style compressed --source-map true --source-map-contents true --precision 6 scss -o assets/css/",
    "css-lint": "stylelint scss/",
    "css-prefix": "postcss --replace assets/css/starter.css --use autoprefixer --map",
    "css-purge": "purgecss --keyframes --css assets/css/starter.css --content index.html \"node_modules/bootstrap/js/dist/{util,modal}.js\" --output assets/css/",
    "css": "npm-run-all css-compile css-prefix",
    "watch": "nodemon -e html,scss -x \"npm run css\"",
    "test": "npm run css-lint && npm run css",
    "server": "live-server --port=3000"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "bootstrap": "^4.6.2",
    "bootstrap-icons": "^1.10.3",
    "express": "^4.18.2",
    "jquery": "^3.6.4",
    "popper.js": "^1.16.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.0.1",
    "live-server": "^1.2.2",
    "node-sass": "^8.0.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "purgecss": "^5.0.0",
    "stylelint": "^14.16.1",
    "stylelint-config-twbs-bootstrap": "^7.0.0"
  }
}
